<?xml version="1.0"?>
<project name="ci" description="Sidas CI" default="composer-dev">

    <target name="composer-dev" description="Composing application with packages" hidden="true" depends="composer-self-update">
        <exec command="composer --prefer-dist --no-interaction --ignore-platform-reqs install" passthru="true" checkreturn="true" dir="${project.basedir}" />
    </target>

    <target name="composer-self-update">
        <exec command="composer self-update" checkreturn="true" passthru="true"/>
    </target>
</project>